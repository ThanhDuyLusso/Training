<div>
    <label>Name Product</label>
    <input type="text" name="name" value="<%= product.name %>">
</div>
<div>
    <label>Seller</label>
    <select name="seller">
        <% sellers.forEach(seller=> { %>
            <% if (seller.id===product.seller) { %>
                <option selected label="<%= seller.name %>" value="<%= seller.id %>">
                    <% } else { %>
                <option label="<%= seller.name %>" value="<%= seller.id %>">
                    <% } %>
                        <% }) %>
    </select>
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate"
        value="<%= product.publishDate == null ? '' : product.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Quantity</label>
    <input type="number" name="quantity" min="1" value="<%= product.quantity %>">
</div>
<div>
    <label>Product image</label>
    <input type="file" name="productImage">
</div>
<div>
    <label>Prize</label>
    <input type="number" name="prize" min="1" value="<%= product.prize %>">
</div>
<div>
    <label>Product detail</label>
    <textarea name="detail"><%= product.detail %> </textarea>
</div>